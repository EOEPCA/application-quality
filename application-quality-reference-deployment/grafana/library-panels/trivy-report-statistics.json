        "editorMode": "code",
        "format": "table",
        "rawQuery": true,
        "rawSql": "SELECT\n  severity,\n  COUNT(*) AS total_count\nFROM\n  (\n    SELECT\n      jsonb_array_elements(output :: jsonb -> 'Results' -> 0 -> 'Vulnerabilities') ->> 'Severity' AS severity\n    FROM\n      reports_admin\n    WHERE\n      id = ${report_id}\n  ) AS sub\nGROUP BY\n  severity\nORDER BY\n  CASE severity\n    WHEN 'CRITICAL' THEN 1\n    WHEN 'HIGH' THEN 2\n    WHEN 'MEDIUM' THEN 3\n    WHEN 'LOW' THEN 4\n    ELSE 5\n  END;",
